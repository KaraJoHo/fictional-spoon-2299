<h1><%= @recipe.name %></h1>

<h3>Complexity: <%= @recipe.complexity %></h3>
<h3>Genre: <%= @recipe.genre %></h3>
<h3>Ingredients: </h3>

<% @recipe_ingredients.each do |ingredient| %>
  <ul>
    <li><%= ingredient.name %></li>
  </ul>
<% end %>
<h4>Total Cost: <%=@recipe.ingredients_total_cost %></h4>

<p>Add Ingredient</p>
<%= form_with url: "/recipe_ingredients/#{@recipe.id}/new", method: :post, local: true do |form| %>
  <%=form.label :ingredient_id, "Ingredient ID" %>
  <%=form.number_field :ingredient_id %>
  <%=form.hidden_field :recipe_id, value: @recipe.id %>
  <%=form.button "Submit" %>
<% end %>